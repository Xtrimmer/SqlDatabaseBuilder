<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageVersion>0.0.2</PackageVersion>
    <PackageId>SqlDatabaseBuilder</PackageId>
    <Authors>Jeff Trimmer,Mauricio Beithia</Authors>
    <Owners>Jeff Trimmer</Owners>
    <Title>SQL Server Database Builder</Title>
    <Description>SqlDatabaseBuilder is used to create database resources in a Sql Server database from within a C# application.</Description>
    <PackageTags>SqlServer;Database;SQL;</PackageTags>
    <RepositoryUrl>https://github.com/Xtrimmer/SqlDatabaseBuilder</RepositoryUrl>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <IncludeSource>true</IncludeSource>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.6.0" />
    <None Include="License/LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)"/>
  </ItemGroup>

</Project>
